{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        /* Linting */
        "types": [
            "vite/client"
        ],
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "@/*": ["./src/*"],
            "@/types": ["./src/types"]
        },
        // 允许访问any类型的属性，避免移动端代码中的类型错误
        "noImplicitAny": false
    },
    "include": [
        "src/**/*"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
